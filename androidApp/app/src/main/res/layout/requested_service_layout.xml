<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/serviceTextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="24sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/priceTextView2"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/appointmentDateText"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/informationTextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Information and Documents" />

        <ListView
            android:id="@+id/informationListView2"
            android:layout_width="match_parent"
            android:layout_height="344dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="22dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/declineButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="@string/decline"
                android:textColor="#EF0000" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/acceptButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="@string/accept"
                android:textColor="#4CAF50" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>